{
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    // 所有可自动修复的 ESlint 错误都将在保存时修复
    "source.fixAll.eslint": true,
    // 所有可自动修复的 Stylelint 错误都将在保存时修复
    "source.fixAll.stylelint": true
  },
  // 包含下方后缀的文件
  "eslint.validate": [
    "javascript",
    "typescript",
    "html",
    "vue",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "yml"
  ],
  // specifying which files to validate
  // 指定要验证的文件
  "stylelint.validate": [
    "css",
    "scss",
    "vue"
  ]
}
